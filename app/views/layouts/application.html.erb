<!DOCTYPE html>
<html>
  <head>
    <title>Mania</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div>
        <%= form_with url: end_users_search_path, method: :get, local: true do |f| %>
          <%= f.text_field :keyword, value: @keyword %>
          <%= f.submit '検索' %>
        <% end %>
      </div>
      <% if user_signed_in? %>
        <li>
          <%#= link_to 'マイページ', end_users_user_path %>
        </li>
        <li>
          <%= link_to '製品一覧', end_users_items_path %>
        </li>
        <li>
          <%#= link_to 'お気に入りリスト', end_users_item_favorites_path %>
        </li>
        <li>
          <%= link_to 'ログアウト', destroy_user_session_path, method: :delete %>
        </li>
      <% else %>
        <li>
          <%= link_to '製品一覧', end_users_items_path %>
        </li>
        <li>
          <%= link_to 'お気に入りリスト', end_users_item_favorites %>
        </li>
        <li>
          <%= link_to '新規会員登録', new_user_registration_path %>
        </li>
        <li>
          <%= link_to 'ログイン', new_user_session_path %>
        </li>
      <% end %>
    </header>
    <%= yield %>
    <footer></footer>
  </body>
</html>
